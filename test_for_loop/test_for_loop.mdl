// test_for_loop.mdl - Test while loops with different methods
pack "test_for_loop" "Test while loops with different methods" 82;

namespace "test_for_loop";

// Number variables for scoreboard storage
var num counter = 0;
var num player_count = 0;

function "main" {
    // Test while loop with recursion method (default)
    while "$counter$ < 5" {
        say "Recursion loop: $counter$";
        counter = $counter$ + 1;
    }
    
    // Test while loop with explicit recursion method
    while "$counter$ < 10" method="recursion" {
        say "Explicit recursion: $counter$";
        counter = $counter$ + 1;
    }
    
    // Test while loop with schedule method
    while "$counter$ < 15" method="schedule" {
        say "Schedule loop: $counter$";
        counter = $counter$ + 1;
    }
}

// Hook to run main function every tick
on_tick "test_for_loop:main";
